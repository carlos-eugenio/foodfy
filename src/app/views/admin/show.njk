{% extends "./layout.njk" %}

{% block head %}
    <title>Receita de {{items.title}}</title>
{% endblock %}

{% block content %}
    <div class="page-menu">
        <h1>Receita: {{items.title}}</h1>
        <a href="/admin/recipes/{{ items.id }}/edit">Editar receita</a>
    </div>

    <div class="content-recipe-details" style="margin-top:0px;">
        <img src="{{items.image}}" alt="{{items.title}}">
        <h1>{{items.title}}</h1>
        <h2>por {{items.author}}</h2>
        <section class="recipe-description-container">
            <div class="recipe-description">
                <p>Ingredientes <a>ESCONDER</a></p>
                <article class="active">
                    <ul>
                    {% for ingredient in items.ingredients %}
                        <li>{{ingredient}}</li>
                    {% endfor %} 
                    </ul>
                </article>
            </div>
            <div class="recipe-description">
                <p>Modo de preparo <a>MOSTRAR</a></p>                 
                <article>
                    <ul>
                    {% for prepare in items.preparation %}
                        <li>{{prepare}}</li>
                    {% endfor %} 
                    </ul>
                </article>
            </div>
            <div class="recipe-description">
                <p>Informações adicionais <a>MOSTRAR</a></p> 
                <article>{{items.information}}</article>
            </div>
        </section>
    </div>

    <script src="/scripts.js"></script>

{% endblock %}